# CyberMesh Environment Configuration
# Copy this file to .env and modify as needed

# MPS Memory Settings (Apple Silicon M3 Max)
MPS_MEMORY_FRACTION=0.8
OMP_NUM_THREADS=8

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text:137m-v1.5-fp16

# FastAPI Server
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/cybermesh.log

# Performance Thresholds
PERF_CA_GRID_LATENCY_MS=10
PERF_EMBEDDING_LATENCY_MS=50
PERF_WS_LATENCY_MS=50

# Test Configuration
TEST_BATCH_SIZE=32
TEST_GRID_SIZE=32
TEST_MAX_MEMORY_MB=6144
